---

import BaseLayout from '../layouts/BaseLayout.astro';
import AuthenticateForm from '../components/AuthenticateForm.tsx';

---

<BaseLayout title='Authenticate'>
	<main>
		<AuthenticateForm client:load />
	</main>
</BaseLayout>

<style>
:root {
  background: #c8e9a0;
}

main {
	position: absolute;
	left: 50%; top: 50%;
	transform: translate(-50%, -50%);

	width: 20em; max-width: 100vw;

	background: white;
	padding: 2em;
	border: 4px solid black;
	box-shadow: 4px 4px 0 0 black;
}

</style>

